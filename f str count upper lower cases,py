def upperlower(str):
    upper = 0
    lower = 0
    for i in range(len(str)):
        if (ord(str[i]) >= 97 and ord(str[i]) <=122):
            lower +=1
        elif  (ord(str[i]) >= 65 and ord(str[i]) <=90):
            upper +=1
    print("lower case characters = %s" % lower)
    print("upper case character = %s" % upper) 
    
str ='The quick Brow Fox' 
upperlower(str)


